{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap-select.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/edit.css') }}">
{% endblock %}


{% block user_content %}
    {% include 'header.html.twig'%}
    <div class="container">
        <div class="">
            <div class="">
                <h2>Edit user</h2>

                {{ form_start(userForm, {'attr' : {'class' : 'edit-form'}}) }}
                    {{ form_row(userForm.email) }}
                    {{ form_row(userForm.username, { 'label': 'Full name'}) }}
                    {{ form_row(userForm.isActive) }}
                    {{ form_row(userForm.roles)}}
                    {{ form_row(userForm.mailingOfLetters)}}
                <button type="submit" class="btn control-buttons" formnovalidate>Save</button>
                <button type="button" class="btn btn-danger control-buttons" onclick="history.back(-1)">Cancel</button>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>

{% endblock user_content %}