{% extends 'base.html.twig' %}

{% block title %}Новостной портал{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.css') }}" type="text/css" />
	<link rel="stylesheet" href="{{ asset('css/index.css') }}" type="text/css" />
{% endblock %}

{% block user_content %}
    {% include 'header.html.twig'%}
	<div id="wrapper">
	<main>
		<aside>
            {{ knp_menu_render('AppBundle:MenuBuilder:mainMenu') }}

            {% block javascripts %}
				<script src="{{ asset('js/listCategory.js') }}"></script>
				{#<script src="{{ asset('js/jquery.Pagination.js') }}"></script>
				<script src="{{ asset('js/common.js') }}"></script>#}
				<script src="{{ asset('js/test.js') }}"></script>
            {% endblock %}
		</aside>

		<section>
            {% if is_granted("ROLE_USER") %}
			<article>

				<table class="table table-hover table-responsive " id="page-content">
					<thead>
					<tr>
						<th>{% trans %}News{% endtrans %}</th>
					</tr>
					</thead>
					<tbody>
                    {% for news in result %}
						<tr>
							<td><img src="/img/newsImage/mini/{{ news.id}}.jpg" ></td>
							<td><strong>{{ news.news}}</strong><br>
							{{ news.shortDescription}}</td>
						</tr>
                    {% endfor %}
					</tbody>
				</table>
				<div class="navigation text-center">
                    {{ knp_pagination_render(result) }}
				</div>
					
			</article>
             {% else %}
                 <div class="access">
                     {% if  app.user != null%}
                         {% trans %}Check your email for new messages and activate your account{% endtrans %}
                     {% else %}
                 <p>{% trans %}If you want see news, you need to{% endtrans %} <a href="{{ path("user_register") }}">{% trans %}sign up{% endtrans %}</a> {% trans %}in the portal{% endtrans %}<br>
                     {% trans %}or{% endtrans %} <a href="{{ path("security_login") }}">{% trans %}enter{% endtrans %}</a>
                 </p>
                     {% endif %}
                 </div>
            {% endif %}
		</section>
	</main>
  </div>
    {{ parent() }}
{% endblock user_content %}

