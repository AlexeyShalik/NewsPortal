{% extends 'layout.html.twig' %}
{% block title %}Востановление пароля{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/login.css') }}">
    <style>
        .form-container form {
            min-width: 500px;
        }
    </style>
{% endblock %}

{% block user_content %}
    <div class="container home">
    <a class="logo alone" href="{{ url('homepage') }}">{% trans %}News Portal{% endtrans %}</a>
    </div>
    {% block particles %}
        {{ parent() }}

            <div class="row">
                <div class="container">
                    {{ form_start(form, { 'attr':{ 'class': 'form-signin', 'id': "recovery-form-confirm"} } ) }}
                    <h3>{% trans %}Recover your password{% endtrans %}</h3>
                    <div class="input-field col s12">
                        {{ form_row(form.password.first, {'attr':{'class':'form-control', 'placeholder':'Password'}}) }}
                    </div>
                    <div class="input-field col s12">
                        {{ form_row(form.password.second, { 'attr':{'class':'form-control', 'placeholder':'Repeat Password'} }) }}
                    </div>
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ btn_confirm_text|trans }}">
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>

    {% endblock %}
    {% if error %}
        <div class="container">
            {% block javascripts %}
                {{ parent() }}
                {% include 'form-error.html.twig' with {'error': error} %}
            {% endblock %}
        </div>
    {% endif %}
{% endblock user_content %}