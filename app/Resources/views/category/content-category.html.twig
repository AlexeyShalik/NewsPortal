{% extends 'category/category.html.twig' %}

{% block content %}
    <article id="content" >
        <div id="cont" hidden>
            <table class="table table-hover table-responsive">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>{% trans %}Category{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in content %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td><a class="btn btn-default" style="float: right;" href="{{ path('moderator_category_remove', { 'id': category.id }) }}">
                                <i class="icon-trash"></i></a>
                            <a class="btn btn-default" style="float: right;" href="{{ path('moderator_category_edit', { 'id': category.id }) }}">
                                <i class="icon-pencil"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation text-center">
                {{ knp_pagination_render(content) }}
            </div>
        </div>
    </article>
    <script src="{{ asset('js/show-news-content.js') }}"></script>
{% endblock content %}
