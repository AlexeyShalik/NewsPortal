{% extends 'base.html.twig' %}
{% block title %}{% trans %}Add category{% endtrans %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/edit.css') }}">
    {{ parent() }}
{% endblock %}

{% block user_content %}
    {% include 'header.html.twig'%}
    <div class="container">
        <div class="">
            <div class="">
                <h2>{% trans %}Add category{% endtrans %}</h2>

                {{ form_start(categoryForm, {'attr' : {'class' : 'edit-form', 'enctype' : 'multipart/form-data'}}) }}
                {{ form_label(categoryForm.name,'Name category') }}
                {{ form_errors(categoryForm.name) }}
                {{ form_widget(categoryForm.name) }}
                <button type="submit" class="btn control-buttons" formnovalidate>{% trans %}Save{% endtrans %}</button>
                <button type="button" class="btn btn-danger control-buttons" onclick="history.back(-1)">{% trans %}Cancel{% endtrans %}</button>
                {{ form_end(categoryForm) }}
                <div class="empty"></div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/required.js') }}"></script>
    {% endblock %}
{% endblock user_content %}