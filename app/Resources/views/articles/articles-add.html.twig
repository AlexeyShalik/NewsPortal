{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap-datetimepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap-select.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/edit.css') }}">
    {{ parent() }}
{% endblock %}

{% block user_content %}
    {% include 'header.html.twig'%}
    <div class="container">
        <div class="">
            <div class="">
                <h2>{% trans %}Add article{% endtrans %}</h2>

                {{ form_start(articleForm, {'attr' : {'class' : 'edit-form', 'enctype' : 'multipart/form-data'}}) }}
                    {{ form_label(articleForm.news,'Name article') }}
                    {{ form_errors(articleForm.news) }}
                    {{ form_widget(articleForm.news) }}
                {{ form_row(articleForm.category) }}
                {{ form_row(articleForm.author) }}
                {{ form_row(articleForm.shortDescription)}}
                {{ form_row(articleForm.description)}}
                <div>
                    <label class="required">{% trans %}Image{% endtrans %}</label><br>
                        <label class="btn btn-success btn-file" id="image">
                            {% trans %}Select a picture{% endtrans %} <input type="file" name="photo" style="display: none;">
                        </label>
                </div>
                <div>
                    <div class="form-group">
                        {{ form_label(articleForm.year,'Date') }}
                        {{ form_errors(articleForm.year) }}
                        {{ form_widget(articleForm.year) }}
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('.js-datepicker').datetimepicker({
                                format: 'yyyy-mm-dd',
                                minView: 2,
                                maxView: 4,
                                autoclose: true,
                                pickerPosition: 'top-right'
                            });
                        });
                    </script>
                </div>
                <button type="submit" class="btn control-buttons" formnovalidate>{% trans %}Save{% endtrans %}</button>
                <button type="button" class="btn btn-danger control-buttons" onclick="history.back(-1)">{% trans %}Cancel{% endtrans %}</button>
                {{ form_end(articleForm) }}
                <div class="empty"></div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/bootstrap-datetimepicker.js') }}"></script>
    {% endblock %}
{% endblock user_content %}