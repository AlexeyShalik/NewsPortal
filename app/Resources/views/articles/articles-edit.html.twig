{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap-datetimepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap-select.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/edit.css') }}">
    {{ parent() }}
{% endblock %}


{% block user_content %}
    {% include 'header.html.twig'%}
    <div class="container">
        <div class="">
            <div class="">
                <h2>Edit article</h2>

                {{ form_start(articleForm, {'attr' : {'class' : 'edit-form'}}) }}
                {{ form_row(articleForm.news) }}
                {{ form_row(articleForm.category) }}
                {{ form_row(articleForm.author) }}
                {{ form_row(articleForm.shortDescription)}}
                {{ form_row(articleForm.description)}}
                <div>
                    <div class="form-group">
                        {{ form_label(articleForm.year,'Date') }}
                        {{ form_errors(articleForm.year) }}
                        {{ form_widget(articleForm.year) }}
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('.js-datepicker').datetimepicker({
                                format: 'yyyy-mm-dd',
                                minView: 2,
                                maxView: 4,
                                autoclose: true,
                                pickerPosition: 'top-right'
                            });
                        });
                    </script>
                </div>
                <button type="submit" class="btn control-buttons" formnovalidate>Save</button>
                <button type="button" class="btn btn-danger control-buttons" onclick="history.back(-1)">Cancel</button>
                {{ form_end(articleForm) }}
                <div class="empty"></div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/bootstrap-datetimepicker.js') }}"></script>
      {% endblock %}
{% endblock user_content %}